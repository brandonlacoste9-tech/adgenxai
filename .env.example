# =====================================================
# AdGenXAI Environment Variables
# Copy this file to .env.local for local development
# Add these to Netlify environment variables for production
# =====================================================

# =====================================================
# GITHUB CONFIGURATION
# =====================================================
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_PAT=your_personal_access_token_here

# =====================================================
# NETLIFY CONFIGURATION
# =====================================================
NETLIFY_AUTH_TOKEN=your_netlify_auth_token
NETLIFY_SITE_ID=your_site_id

# =====================================================
# SUPABASE CONFIGURATION (Required)
# =====================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =====================================================
# AI MODELS (At least one required)
# =====================================================

# Google Gemini (Default - Free tier available)
GEMINI_API_KEY=your-gemini-api-key

# OpenAI GPT-4 (Optional - Paid)
OPENAI_API_KEY=your-openai-api-key

# Anthropic Claude (Optional - Paid)
ANTHROPIC_API_KEY=your-anthropic-api-key

# =====================================================
# STRIPE PAYMENT PROCESSING (Required for monetization)
# =====================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Stripe Price IDs (Create these in Stripe Dashboard)
NEXT_PUBLIC_STRIPE_PRICE_PRO=price_your-pro-monthly-price-id
NEXT_PUBLIC_STRIPE_PRICE_ENTERPRISE=price_your-enterprise-monthly-price-id

# =====================================================
# EMAIL NOTIFICATIONS (Choose one provider)
# =====================================================

# Email Provider: 'sendgrid' | 'resend' | 'postmark' | 'console' (dev mode)
EMAIL_PROVIDER=sendgrid

# SendGrid (Recommended - Free tier: 100 emails/day)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Email Sender Configuration
FROM_EMAIL=noreply@adgenxai.pro
FROM_NAME=AdGenXAI

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================

# App URL (Used in emails and redirects)
NEXT_PUBLIC_APP_URL=https://www.adgenxai.pro

# Admin User IDs (Comma-separated Supabase user UUIDs)
ADMIN_USER_IDS=uuid-1,uuid-2,uuid-3

# Application Settings
NODE_ENV=production
ENABLE_WEBHOOK_PROCESSING=false

# =====================================================
# OPTIONAL: BEEHIV NEWSLETTER INTEGRATION
# =====================================================
BEEHIV_API_KEY=your-beehiv-api-key
BEEHIV_PUBLICATION_ID=your-publication-id

# =====================================================
# OPTIONAL: AI SENSORY CORTEX
# =====================================================
NEXT_PUBLIC_SENSORY_CORTEX_URL=https://your-cortex-url.com

# =====================================================
# OPTIONAL: ANALYTICS
# =====================================================
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
